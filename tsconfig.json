{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": [
        "ES2022"
      ],
      "module": "node16",
      "moduleResolution": "node16",
      "target": "ES2022",
      "baseUrl": ".",
      "outDir": "./build",
      "removeComments": true,
      "typeRoots": [ "./node_modules/@types" ],
      "skipLibCheck": true,
      "noImplicitAny": true,
    },
    "include": [
      "**/*.ts"
    ],
}